                            <div class="col-5" style="text-align: center;">
                                <h5>ingredient</h5>
                            </div>
                            <div class="col-2" style="text-align: center;">
                                <h5>amount</h5>
                            </div>
                            <div class="col-5" style="text-align: center;">
                                <h5>unit</h5>
                            </div>
                        </div>
                        <% for(var i = 1; i < 4; i++) {%>
                        <div class="ingredients row mb-2" id="ingrow<%=i%>">
                            <div class="col-5">
                                <input type="text" class="form-control" id="ing_<%=i%>" placeholder="ingredient <%=i%>" required>
                                <div class="invalid-feedback">specify an ingredient</div>
                            </div>
                            <div class="col-2">
                                <input type="text" class="form-control" id="amt_<%=i%>" placeholder="amount <%=i%>" required>
                                <div class="invalid-feedback">specify an amount</div>
                            </div>
                            <div class="col-5">
                                <input type="text" class="form-control" id="unit_<%=i%>" placeholder="unit <%=i%>" required>
                                <div class="invalid-feedback">specify a unit</div>
                            </div>
                        </div>
                        <% } %>
